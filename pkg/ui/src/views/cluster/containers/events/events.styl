@require "~styl/base/palette.styl"
@require "~src/components/core/index.styl"

.events
  font-family Lato-Regular
  table
    width 100%
    border-collapse collapse
    tr
      height 60px
      border-bottom 1px solid $table-border-color
      &:last-child
        border 0
    td
      padding-left 0

.events__message
  font-family $font-family--base
  font-size 14px
  line-height 22px
  color $colors--neutral-8
  text-overflow ellipsis
  display block
  white-space nowrap
  overflow hidden
  width 169px
  margin-bottom 18px

.events__timestamp
  font-family $font-family--base
  font-size 12px
  line-height 20px
  color $colors--neutral-6
  margin-left 20px
  width 65px

.events__more-link
  text-align center
  color $link-color
  font-family Lato-Bold
  text-transform uppercase
  font-size 12px
  letter-spacing 2px
  cursor pointer

  a
    color $link-color
    text-decoration none
